<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video Stream</title>
    <style>
        body,
        html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: black;
        }

        video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>
</head>

<body>
    <video id="videoPlayer" controls autoplay>
        <source id="videoSource" src="<%= ad.src %>" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <script>
        const videoPlayer = document.getElementById('videoPlayer');
        const videoSource = document.getElementById('videoSource');
        const publisherId = '<%= publisher._id %>';

        const fetchNextAd = () => {
            fetch(`/stream/${publisherId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Daily limit reached');
                    }
                    return response.json();
                })
                .then(data => {
                    videoSource.src = data.ad.src;
                    videoPlayer.load();
                })
                .catch(error => {
                    console.log('Playback stopped:', error.message);
                    document.body.innerHTML = '<h1>Daily limit reached. Please try again tomorrow.</h1>';
                });
        };

        videoPlayer.addEventListener('ended', fetchNextAd);
    </script>
</body>

</html>